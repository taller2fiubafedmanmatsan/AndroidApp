<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_custom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="#B3B3B3"
        android:padding="140dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/ib_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/background"
        android:layout_alignTop="@+id/background"
        android:background="@android:drawable/ic_delete"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Channel creation"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="170dp"
            android:layout_marginBottom="40dp"
            android:background="#B3B3B3"
            />

        <EditText
            android:id="@+id/edit_channel_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Insert channel name"
            android:padding="10sp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/border_edittext"
            android:inputType="textWebEditText"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/create_channel"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center_horizontal"
                android:background="#59b300"
                android:text="CREATE"
                />

            <Button
                android:id="@+id/cancel_create_channel"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="#ff794d"
                android:text="CANCEL"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>