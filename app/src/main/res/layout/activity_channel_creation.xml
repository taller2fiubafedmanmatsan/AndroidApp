<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChannelCreationActivity">

    <ImageView
        android:id="@+id/main_backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/login_register_background"
        />

    <EditText
        android:id="@+id/channel_name"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:hint="Channel name"
        android:backgroundTint="#FFFFFF"
        android:inputType="textWebEditText" />

    <Button
        android:id="@+id/button_create_channel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:background="@drawable/round_border_button"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:text="Create channel" />
</RelativeLayout>